<%= simple_form_for(@home) do |f| %>
    <%= f.input :address, placeholder: "address" %>
    <%= f.input :type, collection: Home::TYPE  %>
    <%= f.input :pictures, placeholder: "upload a picture" %>
    <%= f.input :number_of_rooms, collection: Home::NUMBER_OF_ROOMS %>
    <%= f.input :radius, collection: Home::RADIUS %>
    <%= f.input :status, collection: Home::STATUS %>
    <%= f.input :comments, placeholder: "comments (change to text field" %>
    <%= f.button :submit, class: "btn btn-primary" %>
<% end %>


