<!-- GENERATE VIEWING APPOINTMENT FORM -->

<%= simple_form_for([@home, @booking]) do |f| %>
<%= f.input :starts_at, as: :string, input_html: { data: { provide: :datepicker } } %>
<%= f.input :starts_at_time, placeholder: "14.00", as: :time, minute_step: 15 %>
<%= f.button :submit, "Book a viewing", class: "text-center btn btn-primary"  %>
<% end %>

<!-- FORM END -->

<%= content_for(:after_js) do %>
<script>
  $(function(){
    $('.datepicker').datepicker({
      format: 'dd-mm-yyyy',
      startDate: '+0d',
      autoclose: true
    });
  })
</script>
<% end %>




