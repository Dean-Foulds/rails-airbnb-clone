
<%= simple_form_for [@home, Booking.new] do |f| %>
  <%= f.input :date, as: :string, label: 'Date required', input_html: { class: "datepicker-saul" }, required: true %>
  <%= f.button :submit , "Ask for a booking", class: "text-center btn btn-primary btn-block"  %>
<% end %>

<%= content_for(:after_js) do %>
  <script>
    $(function(){
      $('.datepicker-saul').datepicker({
        format: 'mm-dd-yyyy',
        startDate: '+0d',
        autoclose: true
      });
    })
  </script>
<% end %>
