 <% if @home.pictures.first
  main_home_picture = cl_image_path @home.pictures.first.path
else
  main_home_picture = ""
  end %>

<div class="container">
  <!-- START THE FEATURETTES -->
  <div class="row">

    <div class="col-md-3">
      <div class="featurette-img-sm home-image-thumbnail" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= main_home_picture %>') ;">
      </div>
    <div class="featurette-image">
        <!--           <div class="map-wrapper"> -->
        <% if @hash && @hash.first[:lat] %>
          <div id="map" style="height: 100%; width: 100%">
          </div>
        <% end %>
        <!--  </div> -->
    </div>
    </div>


    <div class="col-md-6">
      <h2 class="featurette-heading"> <%= @home.address %> <% if @home.status == "" %>
        No status
        <% else %>
        <%= @home.status %>
        <% end %></h2>
        <p class="lead">Donec ullamcorper nulla non metus auctor fringilla. Vestibulum id ligula porta felis euismod semper. Praesent commodo cursus magna, vel scelerisque nisl consectetur. Fusce dapibus, tellus ac cursus commodo.</p>
    </div>



  </div>
  <!-- /END THE FEATURETTES -->
</div>



<% content_for(:after_js) do %>
<script>
$(document).on('ready', function() {
  var handler = Gmaps.build('Google');
  handler.buildMap({ internal: { id: 'map' } }, function() {
    markers = handler.addMarkers(<%= raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    if (markers.length == 0) {
      handler.getMap().setZoom(2);
    } else if (markers.length == 1) {
      handler.getMap().setZoom(14);
    }
  });
});
</script>
<% end %>

<%= content_for(:after_js) do %>
<script>
$(function(){
  $('.datepicker').datepicker({
    format: 'dd-mm-yyyy',
    startDate: '+0d',
    autoclose: true
  });
})
</script>
<% end %>
