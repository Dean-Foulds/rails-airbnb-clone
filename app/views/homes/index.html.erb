<h1 class="text-center">Property listing</h1>

<%= form_tag(homes_path, :method => 'get', class: "form-inline") do %>
  <%= text_field_tag :address, params[:address], :placeholder => "What address are you searching", :class => 'form-control' %>
  <%= text_field_tag :post_code, params[:post_code], :placeholder => "What post_code are you searching", :class => 'form-control' %>
  <%= submit_tag 'Search', class: "btn btn-primary" %>
<% end %>


<div class="p-wrapper">
  <div class="container">
    <div class="row">
    <% @homes.each do |home| %>
      <div class="col-xs-6 col-sm-3 col-md-2">
        <div class="card-gray">
          <div class="card padded" style="background-image: url('<%= home.pictures.first ? cl_image_path(home.pictures.first.path) : nil %>')">
          </div>
          <div class="card-details">
            <%= home.address %>
            <%= home.post_code %>
            <%= home.status %>

          </div>
            <%= link_to "#", home_path(home), class: "card-link" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>











