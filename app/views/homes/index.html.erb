<h1 class="text-center">Current Homes</h1>

<div class="text-center padded">
  <%= link_to "Rent your property", new_home_path, class: "btn btn-primary" %>
</div>

<div class="container">
  <div class="row">
    <% @homes.each do |home| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center">
        <%= home %>
          <% if home.pictures %>
            <div class="card-header" style="background-image: url('<%= image_path home.pictures %>')">
            </div>
          <% else %>
            <div class="card-header" style="background-image: url('http://www.seriouseats.com/images/2014/11/20141104-home-party-old-fashioneds-holiday-vicky-wasik-3.jpg')">
            </div>
          <% end %>
        <% end %>


          <div class="card-body">
            <%= @address %>
            <%= link_to "link", homes_path(@homes) %>
          </div>
        </div>
      </div>
  </div>
</div>
