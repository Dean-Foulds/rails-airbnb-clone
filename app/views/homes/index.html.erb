<h1 class="text-center">Property listing</h1>


<div class="container">
  <div class="row">
    <% @homes.each do |home| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card text-center">
          <% if home.pictures %>
            <div class="card-header" style="background-image: url('<%= image_path home.pictures %>')">
            </div>
          <% end %>
          <div class="card-body">
            <%= @address %>
            <%= @status %>
            <%= @radius %>
            <%= link_to home.address, homes_path(@homes) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="text-center padded">
  <%= link_to "Add a property", new_home_path, class: "btn btn-primary" %>
</div>




