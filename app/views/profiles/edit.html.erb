<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-2">
      <% if current_user.avatar? %>
        <%= cl_image_tag current_user.avatar.path, class: "avatar-bordered" %>
      <% end %>
        <div>
          <%= current_user.first_name %>
          <%= current_user.last_name %>
          <%= current_user.address %>
          <%= current_user.city %>
          <%= current_user.post_code %>
          <%= current_user.company %>
        </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-6">
      <%= simple_form_for(current_user, url: update_profile_path) do |f| %>
        <%= f.input :first_name, placeholder: "First Name" %>
          <%= f.input :last_name, placeholder: "Last Name" %>
          <%= f.input :address, placeholder: "Downing St" %>
          <%= f.input :city, placeholder: "London" %>
          <%= f.input :post_code, placeholder: "W1" %>
          <%= f.input :company, placeholder: "Company name if applicable" %>
          <%= f.input :mobile_number, placeholder: "020555666777" %>
          <%= f.input :avatar, as: :attachinary %>
          <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
