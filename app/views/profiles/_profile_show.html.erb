
<div class="col-md-4">
  <% if current_user.avatar? %>
    <%= cl_image_tag current_user.avatar.path, class: "property_image" %>
  <% end %>
</div>

<!-- PROFILE TEXT -->
<div class="col-md-offset-1 col-xs-6">
    <h4>  <%= current_user.first_name %> <%= current_user.last_name %> </h4>
    <p>   <%= current_user.company %>   </br>
          <%= current_user.address %>   </br>
          <%= current_user.city %>      </br>
          <%= current_user.email %>     </br>
          <%= current_user.mobile_number %></p>

</div>

